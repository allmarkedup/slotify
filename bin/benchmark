#!/usr/bin/env ruby

if ENV["BENCHMARK_TARGET"]
  system("BENCHMARK_TARGET=#{ENV["BENCHMARK_TARGET"]} ruby performance/benchmark.rb")
else
  system("
    BENCHMARK_TARGET=action_view ruby performance/benchmark.rb;
    BENCHMARK_TARGET=nice_partials ruby performance/benchmark.rb;
    BENCHMARK_TARGET=view_component ruby performance/benchmark.rb;
    BENCHMARK_TARGET=slotify ruby performance/benchmark.rb")
end
