#!/usr/bin/env ruby

require "optparse"
require_relative "../lib/slotify/version"

options = {}
OptionParser.new do |opt|
  opt.on('--version VERSION') { options[:version] = _1 }
  opt.on('--dry-run') { options[:dry_run] = true }
end.parse!

raise ArgumentError, "âŒ No release version specified" unless options[:version]

current_version = Slotify::VERSION
new_version = options[:version]

puts "\nðŸ Starting v#{new_version} release process...\n\n"

`git diff --exit-code`
raise "âŒ Working directory is dirty. Cannot run release scripts." unless $?.success?

version_file_path = File.expand_path("#{File.dirname(__FILE__)}/../lib/slotify/version.rb")
version_file = File.open(version_file_path)
version_file_contents = version_file.read

File.write(version_file_path, version_file_contents.gsub(current_version, new_version))

raise "âŒ Version update failed" unless File.read(version_file_path).match?(Regexp.new(new_version))

`bundle install --quiet`
if $?.success?
  puts "âœ… `bundle install` run successfully\n"
else
  raise "âŒ `bundle install` failed."
end

if options[:dry_run]
  puts "âœ… Dry run complete (git commands not run)\n"
else
  system(%(git commit -am "Release v#{new_version}" >> /dev/null), exception: true)
  puts "âœ… File changes committed to git\n"

  system(%(git tag -a v#{new_version} -m "v#{new_version} release" >> /dev/null), exception: true)
  puts "âœ… v#{new_version} git tag created\n"

  system(%(git push origin main --tags >> /dev/null), exception: true)
  puts "âœ… Changes pushed to Github\n"

  puts "\nðŸš€ Release v#{new_version} complete."
end
