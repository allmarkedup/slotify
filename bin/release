#!/usr/bin/env ruby

require "optparse"
require_relative "../lib/slotify/version"

puts "\nüåà Starting release...\n\n"

options = {}
OptionParser.new do |opt|
  opt.on('--version VERSION') { options[:version] = _1 }
  opt.on('--dry-run') { options[:dry_run] = true }
end.parse!

raise ArgumentError, "‚ùå No release version specified" unless options[:version]

`git diff --exit-code`
raise "‚ùå Working directory is dirty. Cannot run release scripts." if ($?.exitstatus == 1)

current_version = Slotify::VERSION
new_version = options[:version]

version_file_path = File.expand_path("#{File.dirname(__FILE__)}/../lib/slotify/version.rb")
version_file = File.open(version_file_path)
version_file_contents = version_file.read

File.write(version_file_path, version_file_contents.gsub(current_version, new_version))

raise "‚ùå Version update failed" unless File.read(version_file_path).match?(Regexp.new(new_version))

if options[:dry_run]
  puts "‚úÖ  Dry run complete (git commands not run)\n\n"
else
  system(%(git commit -am "Release v#{new_version}"), exception: true)
  system(%(git tag -a v#{new_version} -m "v#{new_version} release"), exception: true)
  system(%(git push origin main --tags), exception: true)

  puts "‚úÖ Release v#{new_version} complete."
end
